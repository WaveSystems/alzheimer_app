!!!
%html
  %head
    %title Alzheimer
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body.logged_in
    #wrapper
      #header
        %ul#tabs.header-item
          %li#dashboard
            %h2#utility_nav= link_to "Inicio", "/"
          %li#dashboard
            %h2#utility_nav= link_to "Menú principal", :dashboard
          %li#dashboard
            %h2#utility_nav= link_to "Editar perfil", :edit_profile
          %li#dashboard
            %h2#utility_nav= link_to "Organizaciones", :organizations_index
        - if user_signed_in?
          %h3#utility_nav.header_item= link_to "Cerrar sesión", destroy_user_session_path, :method => "delete"
          %h3#utility_nav.header_item= current_user.email
      #title_bar    
        #item
          %h1 Alzheimer
      - if notice
        %div.flashes
          %div.flash.flash_notice= notice
      - if alert
        %div.flashes
          %div.flash.flash_alert= alert
      #content
        #render_views
          = yield
      #footer(align = "center")
        %h3 &copy; WaveSystems 2012
